<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OpenChildSelectedActivity"
    android:background="#17A9BC"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/view_stuff_id"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/image_for_pic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/child_name_id"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/parent_name_id"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"

            android:layout_marginRight="50dp"
            android:layout_marginTop="100dp"
            android:text="@string/call_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/add_a_pill_remedy"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/call_btn_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            app:icon="@android:drawable/stat_sys_phone_call" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_top_id"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/text_display_hours_id"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:paddingStart="100dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="15dp">

        </TextView>

        <EditText
            android:id="@+id/text_pill_id"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:hint="@string/insert_pill_name">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timer_layout_id"
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <Button
            android:id="@+id/select_hours_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="10dp"
            android:text="@string/select_hours"/>


        <Button
            android:id="@+id/confirm_btn_children_add_pill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="10dp"
            android:text="@string/confirm"
            tools:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selected_child_recycler_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/back_home_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="120dp"
            android:text="@string/back"/>



    </RelativeLayout>


</LinearLayout>